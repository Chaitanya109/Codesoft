import random

print("ğŸ® Welcome to Rock, Paper, Scissors Game! ğŸ®")
print("-------------------------------------------")

# Initialize scores
user_score = 0
computer_score = 0

# List of possible choices
choices = ["rock", "paper", "scissors"]

# Game loop
while True:
    # User input
    user_choice = input("\nEnter your choice (rock/paper/scissors): ").lower()

    # Validate input
    if user_choice not in choices:
        print("âŒ Invalid choice! Please choose rock, paper, or scissors.")
        continue

    # Computer's random choice
    computer_choice = random.choice(choices)

    # Display both choices
    print(f"\nğŸ§ You chose: {user_choice}")
    print(f"ğŸ’» Computer chose: {computer_choice}")

    # Determine the winner
    if user_choice == computer_choice:
        print("ğŸ¤ It's a tie!")
    elif (
        (user_choice == "rock" and computer_choice == "scissors") or
        (user_choice == "scissors" and computer_choice == "paper") or
        (user_choice == "paper" and computer_choice == "rock")
    ):
        print("ğŸ‰ You win this round!")
        user_score += 1
    else:
        print("ğŸ˜¢ Computer wins this round!")
        computer_score += 1

    # Display current scores
    print(f"\nğŸ† Scores:")
    print(f"You: {user_score} | Computer: {computer_score}")

    # Ask if user wants to play again
    play_again = input("\nDo you want to play again? (yes/no): ").lower()
    if play_again != "yes":
        print("\nğŸ‘‹ Thanks for playing Rock, Paper, Scissors!")
        print(f"Final Score -> You: {user_score}, Computer: {computer_score}")
        if user_score > computer_score:
            print("ğŸ–ï¸ You are the overall winner! Congratulations!")
        elif user_score < computer_score:
            print("ğŸ’» Computer wins overall! Better luck next time.")
        else:
            print("ğŸ¤ It's an overall tie!")
        break
